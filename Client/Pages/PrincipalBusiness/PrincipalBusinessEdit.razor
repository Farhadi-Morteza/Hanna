@page "/PrincipalBusiness/Edit/{Id}"
@inject NavigationManager navigationManager
@inject PrincipalBusinessService principalBusinessService
@inject IDialogService dialogService
@inject ISnackbar snackbar

<PageTitle>@(Resources.DataDictionary.PrincipalBusiness)</PageTitle>

<PrincipalBusinessFormEditor Model="@(Model)" OnValidSubmit="@(() => Submit())" Type="EditFormType.Edit"></PrincipalBusinessFormEditor>

@code {
    #region Constructor ================================================================================================

    protected async override Task OnInitializedAsync()
    {
        if(string.IsNullOrEmpty(Id) == false)
        {
            Model =
                await principalBusinessService.GetByIdAsync(Id);
        }
    }

    #endregion =========================================================================================================

    #region Properties =================================================================================================

    public ViewModels.PrincipalBusinessViewModel Model { get; set; } = new ViewModels.PrincipalBusinessViewModel();

    [Parameter] public string Id { get; set; } = string.Empty;

    #endregion =========================================================================================================

    #region Method =====================================================================================================

    private async Task Submit()
    {
        var dialog = dialogService.Show<MrsDialogEdit>();
        var result = await dialog.Result;

        if (result.Cancelled == false)
        {
           var Result = await principalBusinessService.PutAsync(Model);

           if(Result != null)
           {
                snackbar.Add($"{Resources.InformationMessages.EditSuccsess}", Severity.Success, config => { config.Icon = Icons.Filled.Edit; });
                navigationManager.NavigateTo(uri: Resources.LinkCaptions.PrincipalBusiness_Index, forceLoad: false);
           }
            else
                snackbar.Add($"{ Resources.InformationMessages.EditFail}", Severity.Warning, config => { config.Icon = Icons.Filled.Warning; });

            
        }
    }

    #endregion =========================================================================================================   

}
