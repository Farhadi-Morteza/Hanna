@namespace MrsComponent

@inherits MudAutocomplete<T>
@typeparam T

<MudAutocomplete T="T"
                 SearchFunc="@SearchFunc"
                 ResetValueOnEmptyText="@ResetValueOnEmptyText"
                 MaxItems="@MaxItems"
                 ToStringFunc="@ToStringFunc"
                 Variant="Variant.Outlined"
                 Label="@Label"
                 Dense="@(DenseMrs)"
                 Clearable="true"
                 Margin="Margin.Dense"
                 Required="@IsRequired"
                 CoerceValue="true"
                 Immediate="true"
                 @bind-Value="@BindTo"
                 >

</MudAutocomplete>

