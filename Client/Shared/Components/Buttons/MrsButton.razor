@namespace MrsComponent

<MudButton
          Link="@Link"
           Variant="@Variant"
           StartIcon="@(StartIcon)"
           Color="@(Color)"
           ButtonType="@ButtonType"
           OnClick="(e) => ButtonClicked(e)"
           FullWidth = "@(FullWidth)"
           >

           @(ChildContent)

</MudButton>
@code {
    [Parameter] public EventCallback<MouseEventArgs> OnClick { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public string Link { get; set; }
    [Parameter] public Variant Variant { get; set; } = MudBlazor.Variant.Filled;
    [Parameter] public ButtonType ButtonType { get; set; }
    [Parameter] public Color Color { get; set; } = Color.Primary;
    [Parameter] public string StartIcon { get; set; } = Icons.Filled.SmartButton;
    [Parameter] public bool FullWidth { get; set; } = false;
    [Parameter] public Size mySize { get; set; }

    private void ButtonClicked(MouseEventArgs e)
    {
        OnClick.InvokeAsync(e);
    }
}
