@namespace MrsComponent

<MudButton Link="@Link"
           OnClick="(e) => OnClick.InvokeAsync(e)"
           Variant="@Variant"
           StartIcon="@Icons.Material.Filled.Create"
           Color="Color.Success"
           ButtonType="@ButtonType"
           FullWidth = "@(FullWidth)"
            >

    @if (ChildContent == null)
    {
        @Resources.Buttoms.Create
    }
    else
    {
        @(ChildContent)
    }
</MudButton>


@code {

    [Parameter] public EventCallback<MouseEventArgs> OnClick { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public string Link { get; set; } = string.Empty;
    [Parameter] public Variant Variant { get; set; } = Variant.Filled;
    [Parameter] public ButtonType ButtonType { get; set; } = ButtonType.Button;
    [Parameter] public bool FullWidth { get; set; } = false;



}
