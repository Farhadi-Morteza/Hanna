@namespace MrsComponent




<MudMessageBox @ref="@mbox" Title="@(Resources.DataDictionary.Warning)" CancelText="@(Resources.Buttoms.Cancel)">
    <MessageContent>
        @(Resources.Dialog.DeleteConfirm)
        Deleting can <b><i>not</i></b> be undone!
    </MessageContent>
    <YesButton>
        <MudButton Variant="Variant.Filled" Color="Color.Error" StartIcon="@Icons.Material.Filled.DeleteForever">Delete!</MudButton>
    </YesButton>
</MudMessageBox>



@code
{
  [Parameter]
    public MudMessageBox mbox { get; set; }
}
