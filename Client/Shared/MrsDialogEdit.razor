@namespace MrsComponent

<MudDialog>
    
    <DialogContent>
        <MudText>@(Resources.Dialog.EditConfirn)</MudText>
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="@(() => Cancel())" Color="Color.Default" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Cancel">@Resources.Buttoms.Cancel</MudButton>
        <MudButton Color="Color.Info" Variant="Variant.Filled" OnClick="Submit" StartIcon="@Icons.Material.Filled.Edit">@Resources.Buttoms.Edit</MudButton>
    </DialogActions>

</MudDialog>

@code {
	protected override void OnInitialized()
    {
        MudDialog.SetTitle(Resources.DataDictionary.Edit);
        MudDialog.Options.CloseButton = true;
        MudDialog.Options.NoHeader = false;
        MudDialog.Options.MaxWidth = MaxWidth.Medium ;
        MudDialog.Options.Position = DialogPosition.TopCenter;

        MudDialog.SetOptions(MudDialog.Options);
    }

    [CascadingParameter] MudDialogInstance MudDialog { get; set; }


    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}
